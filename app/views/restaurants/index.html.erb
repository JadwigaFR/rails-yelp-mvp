<div class="container">
  <h1>All restaurants</h1>

  <%= link_to '+ Add a Restaurant',  new_restaurant_path(@restaurant) %>

  <% @restaurants.each do |restaurant| %>
    <h3><%= restaurant.name %></h3>
    <h4><%= restaurant.category %> restaurant</h4>
    <p><%= restaurant.address %></p>
  <% end %>

</div>
